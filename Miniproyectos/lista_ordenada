Algoritmo lista_ordenada
	definir num, i, actual, mayor, menor, rompio Como Entero
	definir creciente, soniguales, decreciente, hayrepetidos Como logico
	creciente <- Verdadero
	decreciente <- verdadero 
	soniguales <- verdadero 
	hayrepetidos <- falso 
	rompio <- 0
	
	escribir "Ingrese un numero: "
	leer actual
	mayor <- actual
	menor <- actual 
	
	para i <- 1 Hasta 4 Hacer
		escribir "Ingrese un numero: "
		leer num
		
		si num = actual Entonces
			hayrepetidos <- Verdadero
		FinSi
		
		si num < menor Entonces
			menor <- num
		FinSi
		
		si num > mayor Entonces
			mayor <- num
		FinSi
		
		si num <> actual Entonces
			soniguales <- falso
		FinSi
		
		si num < actual Entonces
			creciente <- falso 
			rompio <- rompio + 1
		FinSi
		
		si num > actual Entonces
			decreciente <- falso
			rompio <- rompio + 1
		FinSi
		
		actual <- num
	FinPara
	
	si soniguales Entonces
		Escribir "Todos los numeros son iguales"
	SiNo
		si creciente Entonces
			Escribir "La lista es creciente"
		SiNo
			si decreciente Entonces
				Escribir "La lista es decreciente"
			SiNo
				Escribir "La lista es desordenada"
			FinSi
		FinSi
		Escribir "Veces que rompio: ", rompio
		
		si hayrepetidos Entonces
			Escribir "Hay numeros repetidos"
		FinSi
		
		
		Escribir "Numero menor: ", menor
		Escribir "Numero mayor: ", mayor
		
	FinSi
FinAlgoritmo
